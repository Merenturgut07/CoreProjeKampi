@model Message2
@{
	ViewData["Title"] = "SendMessage";
	Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<h1>Yeni Mesaj Gönderme Oluşturma Sayfası</h1>
<br />
@using (Html.BeginForm("SendMessage", "WriterMessage", FormMethod.Post))
{
	@Html.ValidationMessageFor(x => x.MessageId)
	<br />
	@Html.Label("Alıcı")
	@* 	@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" }) *@
	<input type="text" class="form-control" />

	<br />
	@Html.Label("Konu")
	@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

	<br />
	@Html.Label("Mesajınız")
	@Html.TextAreaFor(x => x.MessageDetails, 8, 2, new { @class = "form-control" })
	<br />
	<button class="btn btn-info">Mesajı Gönder </button>
}



