@model List< Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Gelen Kutusu  </h4>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Konu</th>
						<th>Tarih</th>
						<th>Gönderen </th>
						<th>Mesajı Aç</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.MessageId</td>
							<td>@item.Subject</td>
							<td>@item.MessageDate.ToString("dd-MMM-yyyy")</td>
							<td>@item.ReceiverUser.WriterName</td>
							<td><a href="/Writer/WriterMessage/MessageDetails/@item.MessageId" class="btn btn-success">Mesajı Aç</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Writer/WriterMessage/SendMessage/" class="btn btn-info">Yeni Mesaj Oluştur</a>
		</div>
	</div>
</div>



