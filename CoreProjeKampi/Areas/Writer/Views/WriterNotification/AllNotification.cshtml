@model List<Notification>
@{
	ViewData["Title"] = "AllNotification";
	Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Bildirim Listesi </h4>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>  # </th>
						<th>  Türü  </th>
						<th>  Detay  </th>
						<th>  Tarih </th>
						<th>  Durum  </th>
						<th> Sil </th>
						<th> Güncelle </th>

					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td> @item.NotificationId  </td>
							<td> @item.NotificationType  </td>
							<td> @item.NotificationDetails.Substring(0,15)  </td>
							<td> @item.NotificationDate.ToString("dd-MMM-yyyy")  </td>
							<td>
								@if (item.NotificationStatus)
								{
									<span class="badge-badge-success">Aktif </span>
								}
								else
								{
									<span class="badge-badge-danger">Pasif </span>
								}
							</td>
							<td><a href="/Writer/WriterBlog/BlogDelete/@item.NotificationId" onclick="return confirm('Gerçekten Silmek İstiyor Musun')" class="btn btn-danger" @item.NotificationId>Sil</a>   </td>
							<td><a href="/Writer/WriterBlog/BlogUpdate/@item.NotificationId" class="btn btn-success" @item.NotificationId>Güncelle</a>   </td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Writer/WriterBlog/BlogAdd/" class="btn btn-info">Yeni Mesaj Ekle</a>
		</div>
	</div>
</div>




