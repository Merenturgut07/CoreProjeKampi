
@model List<AppUser>

@{
	ViewData["Title"] = "UserRoleList";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered">
	<tr>
		<th>Kullanıcı</th>
		<th>Rol Ata</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.UserName</td>
			<td><a href="/Admin/AdminRol/AssignRole/@item.Id"class="btn btn-info">Rol Ata</a> </td>
		</tr>
	}
</table>

<a href="/Admin/AdminRole/Index/" class="btn btn-primary">Rol Listesine Dön</a>

