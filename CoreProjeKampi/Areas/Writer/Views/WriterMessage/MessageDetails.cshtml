@model Message2
@{
	ViewData["Title"] = "MessageDetails";
	Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>
<br />
@Html.Label("Mesaj Id")
@Html.TextBoxFor(x => x.MessageId, new { @class = "form-control", disabled = "disabled" })
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
<br />
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x => x.MessageDetails, 8, 2, new { @class = "form-control" })
<br />
<button class="btn btn-success">Mesajlara Dön</button>

